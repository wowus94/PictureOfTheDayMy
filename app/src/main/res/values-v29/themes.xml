<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PictureOfTheDayMy" parent="Base.Theme.PictureOfTheDayMy">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="chipStyle">@style/MyChipStyle</item>
    </style>

    <style name="MyChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="rippleColor">#0B000C</item>
    </style>
</resources>