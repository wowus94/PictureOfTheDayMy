<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.PictureOfTheDayMy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?mainColor</item>
        <item name="colorPrimaryVariant">?secondColor</item>
        <item name="colorOnPrimary">?secondColor</item>
        <item name="colorSecondary">?secondColor</item>
        <item name="colorSecondaryVariant">?secondColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?mainColor</item>
        <item name="chipStyle">@style/MyChipStyle</item>\

        <item name="navigationIcon">@style/MyChipStyle</item>

        <item name="textAppearanceBody2">@style/MyTextAppearance</item>

        <item name="textInputStyle">@style/MyStyleTextInput</item>

        <item name="tabStyle">@style/MyTabLayoutStyle</item>

    </style>

    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorColor">?secondColor</item>
        <item name="tabTextColor">?secondColor</item>
    </style>

    <style name="MyStyleTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?secondColor</item>
        <item name="counterTextColor">?secondColor</item>
        <item name="hintTextColor">?secondColor</item>
        <item name="helperTextTextColor">?secondColor</item>

    </style>

    <style name="MyTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/chelsea_market</item>
        <item name="android:fontFamily">@font/chelsea_market</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">?mainColor</item>
        <item name="rippleColor">?secondColor</item>

    </style>

    <style name="ThemeDefault" parent="Base.Theme.PictureOfTheDayMy">
        <item name="mainColor">@color/blue</item>
        <item name="secondColor">@color/white</item>
        <item name="fonColor">@color/blue_fon</item>
    </style>

    <style name="ThemeGreen" parent="Base.Theme.PictureOfTheDayMy">
        <item name="mainColor">@color/green</item>
        <item name="secondColor">@color/orange</item>
        <item name="fonColor">@color/green_fon</item>
    </style>

    <style name="ThemeRed" parent="Base.Theme.PictureOfTheDayMy">
        <item name="mainColor">@color/red</item>
        <item name="secondColor">@color/black</item>
        <item name="fonColor">@color/red_fon</item>
    </style>


</resources>